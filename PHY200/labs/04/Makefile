PDFLATEX_COMMAND=pdflatex
RTFLATEX_COMMAND=latex2rtf
BIBTEX_COMMAND=bibtex
PROJECT_NAME=lab04

all: $(PROJECT_NAME)

rtf: $(PROJECT_NAME).tex
	$(RTFLATEX_COMMAND) $(PROJECT_NAME).tex

$(PROJECT_NAME): $(PROJECT_NAME).aux $(PROJECT_NAME).tex $(PROJECT_NAME).toc $(PROJECT_NAME).bbl $(PROJECT_NAME).blg
	$(PDFLATEX_COMMAND) $@
	$(PDFLATEX_COMMAND) $@

$(PROJECT_NAME).aux $(PROJECT_NAME).pdf $(PROJECT_NAME).toc: $(PROJECT_NAME).tex
	$(PDFLATEX_COMMAND) $(PROJECT_NAME)

$(PROJECT_NAME).bbl $(PROJECT_NAME).blg: $(PROJECT_NAME).bib $(PROJECT_NAME).aux
	$(BIBTEX_COMMAND) $(PROJECT_NAME)

clean:
	rm -f *.aux *.toc *.log *.pdf *.bbl *.blg *.rtf

